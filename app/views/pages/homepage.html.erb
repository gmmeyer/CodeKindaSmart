<section class="trending">

<h2> Trending <h2>

<% @documents.each do |document| %>
	
			
	<h3 class="homepage-link">
		<a href="<%= document_url(document.id) %>">
			<div class="title">
				<%= document.title %>
			</div>

			<div class="rank">
				<%= document.score %>
			</div>
		</a>
	</h3>

<% end %>

</section>

<section class='homepage-annotations'>
	
	<h2> Top Annotations</h2>

	<% @annotations.each do |annotation| %>

		<h3 class="homepage-link">
			<a href="<%= document_url(annotation.document_id) %>">
				<div class="title">
					<%= annotation.title %>
				</div>

				<div class="rank">
					<%= annotation.score %>
				</div>
			</a>
		</h3>

	<% end %>
</section>

<section class="annotators">
	
	<h2> Top Annotators </h2>

	<% @users.each do |user| %>
		
		<h3 class="homepage-link">
			<div class="title">
				<%= user.username %>
			</div>
			
			<div class="rank">
				<%= user.score %>
			</div>
		</h3>
	<% end %>
</section>

<section class="new">

<h2> Give These New Documents Some Love! <h2>

	<% @new_documents.each do |document| %>

		<h3 class="homepage-link">
			<a href="<%= document_url(document.id) %>">
				<div class="title">
					<%= document.title %>
				</div>

				<div class="rank">
					<%= document.score %>
				</div>
			</a>			
		</h3>
	<% end %>

</section>
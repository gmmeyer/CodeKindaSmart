<section class="annotation-wrapper">
	<section class="annotation">
		<h2 class="annotation-title"><%= annotation.attributes.title %></h2>
		<span class="annotation-body group"> <%= annotation.attributes.body %> </span>

			<form action="" method='post' class='new-annotation'>

				<input type='hidden' name='annotation[document_id]' value='<%= CodeKindaSmart.doc.id %>'>
				<input type='hidden' name='annotation[user_id]' value='<%= CodeKindaSmart.currentUser.id %>'>
		
				<p class="isHidden edit-annotation" class='form-field input-field input group'>
					<label for="annotation-title" class='group'>Annotation Title</label>
					<input value="<% annotation.attributes.title %>" type='text' id='annotation-title' class='group' name='annotation[title]'>
				</p>

				<p class="isHidden edit-annotation" class='form-field input-field input group'>
					<label for="annotation-body" class='group'>Annotation Body</label>
					<textarea name="annotation[body]" id="annotation-body" cols="30" rows="10" multiline='true' class="group" value="annotation.attributes.body"></textarea>
				</p>

				<p class="isHidden edit-annotation" class="login-button button form-field group">
					<input type='submit' value='Create New Annotation!'>
				</p>
			</form>
	</section>
</section>
<form action="" method='post' class='new-annotation'>

	<input type='hidden' name='annotation[document_id]' value='<%= CodeKindaSmart.doc.id %>'>
	<input type='hidden' name='annotation[user_id]' value='<%= CodeKindaSmart.currentUser.id %>'>
	<input type='hidden' name='annotation[start_location]' value='<%= start_location %>'>
	<input type='hidden' name='annotation[end_location]' value='<%= end_location %>'>

	<p class='edit-annotation form-field input-field input group'>
		<label for="annotation-title" class='group'>Annotation Title</label>
		<input value="<%= annotation.attributes.title %>" type='text' id='annotation-title' class='group' name='annotation[title]'>
	</p>

	<p class="edit-annotation form-field input-field input group">
		<label for="annotation-body" class='group'>Annotation Body</label>
		<textarea name="annotation[body]" id="annotation-body" cols="13" rows="10" multiline='true' class="group"><%= annotation.attributes.body %></textarea>
	</p>

	<p class="edit-annotation login-button button form-field group">
		<input class="submit-annotation" type='submit' value='Create!'>
	</p>
</form>